// This is a program that reads two float points from the user and then prints their sum, differences, and products. 
//Author: Adam Adkins
//Created: 9/10/2014

import java.util.Scanner;

public class twoFloatingPoints  {
  public static void main(String[] args) {
    
     float userFloatInputA;
     float userFloatInputB; 
     float inputAplusB;
     float inputAtimesB;
     float inputAminusB;
    
    Scanner obj = new Scanner(System.in);
    System.out.println("This program is designed to show you how quickly a computer can calculate complex numbers.");
    System.out.println("Please enter a floating number: ");
    System.out.println("For Example: 3.14 , 2.6 , 7.4 , or 4.2 ");
    userFloatInputA = obj.nextFloat();
    
    System.out.println("Please enter another floating number: ");
    userFloatInputB = obj.nextFloat();
    
    inputAplusB = userFloatInputA + userFloatInputB ;
    inputAtimesB = userFloatInputA * userFloatInputB;
    inputAminusB = userFloatInputA - userFloatInputB;
      
    System.out.println("Here are your results:");
    System.out.println("The Sum of your numbers: " + inputAplusB +".");
    System.out.println("The Product of your numbers: " + inputAtimesB +".");
    System.out.println("The Quotient of your numbers: "+ inputAminusB+".");
  }
}